<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.problemsolver">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permisssion.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permisssion.CAMERA" />
    <uses-permission android:name="android.permisssion.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProblemResultActivity"></activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".organization.feed.FeedOrgActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity android:name=".problemFeed.page.ProblemPageActivity" />
        <activity android:name=".organization.NewOrganizationActivity" />
        <activity android:name=".registration.AreasActivity" />
        <activity android:name=".registration.RegistrationActivity" />
        <activity android:name=".problem.NewProblemActivity" />
        <activity android:name=".problemFeed.FeedActivity" />
        <activity android:name=".event.EventActivity" />
        <activity android:name=".event.EventPageActivity" />
        <activity android:name=".map.MapActivity" />
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".problemFeed.SettingsActivity" />

        <!-- Firebase Service -->
        <service android:name=".MyFCMClass">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>